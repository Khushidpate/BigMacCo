<Window x:Class="BigMacCo.StockDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Details" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Item Name"/>
            <TextBox Name="ItemNameTextBox"/>
            <Label Content="Supplier Name"/>
            <TextBox Name="SupplierNameTextBox"/>
            <Label Content="Unit Cost"/>
            <TextBox Name="UnitCostTextBox"/>
            <Label Content="Number Required"/>
            <TextBox Name="NumberRequiredTextBox"/>
            <Label Content="Current Stock Level"/>
            <TextBox Name="CurrentStockLevelTextBox"/>
            <Button Content="Save" Width="75" Height="30" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>